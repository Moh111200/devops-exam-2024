{
  "name": "devops-exam",
  "version": "1.0.0",
  "description": "devops exam",
  "main": "index.js",
  "keywords": [
    "devOps",
    "tdd",
    "ci",
    "git"
  ],
  "scripts": {
    "test": "jest --coverage",
    "commit": "cz",
    "build": "webpack ./src/app.js -o public/",
    "preview": "webpack ./src/app.js -o public/ && webpack serve ./public/main.js --mode=development --hot",
    "prettier": "prettier -c \"src/**/*.js\"",
    "prettier:fix": "prettier -c \"src/**/*.js\" --write",
    "lint": "eslint \"src/**/*.js\"",
    "lint:fix": "eslint --fix \"src/**/*.js\"",
    "code:fix": "prettier -c \"src/**/*.js\" --write && eslint --fix \"src/**/*.js\""
  },
  "author": "dls",
  "license": "ISC",
  "devDependencies": {
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "3.1.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 90,
        "branches": 90,
        "functions": 90,
        "statements": 90
      }
    }
  }
}
